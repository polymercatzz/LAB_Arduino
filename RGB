const int RED_PIN = 11;
const int BLUE_PIN = 9;
const int GREEN_PIN = 10;

void setup() {
  pinMode(RED_PIN, OUTPUT);
  pinMode(GREEN_PIN, OUTPUT);
  pinMode(BLUE_PIN, OUTPUT);
}

void loop() {
  digitalWrite(RED_PIN, LOW);
  digitalWrite(BLUE_PIN, HIGH); //RED
  digitalWrite(GREEN_PIN, HIGH);

  delay(1000);

  digitalWrite(RED_PIN, LOW);
  digitalWrite(BLUE_PIN, HIGH); //YELLOW
  digitalWrite(GREEN_PIN, LOW);

  delay(1000);

  digitalWrite(RED_PIN, HIGH);
  digitalWrite(BLUE_PIN, HIGH); //GREEN
  digitalWrite(GREEN_PIN, LOW);

  delay(1000);

  digitalWrite(RED_PIN, HIGH);
  digitalWrite(BLUE_PIN, LOW); //CYAN
  digitalWrite(GREEN_PIN, LOW);

  delay(1000);

  digitalWrite(RED_PIN, HIGH);
  digitalWrite(BLUE_PIN, LOW); //BLUE
  digitalWrite(GREEN_PIN, HIGH);

  delay(1000);

  digitalWrite(RED_PIN, LOW);
  digitalWrite(BLUE_PIN, LOW); //MAGENTA
  digitalWrite(GREEN_PIN, HIGH);

  delay(1000);

  digitalWrite(RED_PIN, LOW);
  digitalWrite(BLUE_PIN, LOW); //WHITE
  digitalWrite(GREEN_PIN, LOW);

  delay(1000);
}
